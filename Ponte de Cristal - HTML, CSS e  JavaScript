// Codigo em JavaScript com os comandos dos jogos 

function jogar() {
    alert("O jogo come√ßou! üéÆ");

rodada = 1;
while (rodada <= 3) {
  console.log("Rodada:" + rodada);

  escolhajogador = prompt(
    "Nivel  " + rodada + " - Escolha um vidro (1 - 2 - 3)"
  );
  pisoquebrado = Math.floor(Math.random() * 3) + 1;
  rodada = rodada + 1;
  if (escolhajogador == pisoquebrado) {
    // Jogador escolheu o vidro quebrado
    alert("O piso quebrou! \n" + "Voc√™ Perdeu!!!");
    rodada = 1000;
  }
   else {
    // Jogador acertou o piso correto
    alert("O piso continou intacto \n" + "Continue avan√ßando");
  }
  if (rodada == 4) {
    // Jogador conseguiu passar por todos os vidros
    alert(
      "Voc√™ conseguiu acertar todos os pisos. \n Parab√©ns!!! \n Voc√™ venceu!!!"
    );
  }
}
}

